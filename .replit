modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib", "redis"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6379
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 33037
externalPort = 3001

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Celery Worker"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Celery Beat"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Redis Server"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Celery Worker"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "celery -A celery_app worker --loglevel=info --concurrency=2"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Celery Beat"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "celery -A celery_app beat --loglevel=info"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Redis Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "redis-server --port 6379 --loglevel notice"

[workflows.workflow.metadata]
outputType = "console"
